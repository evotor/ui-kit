<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EvotorTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/background</item>
        <item name="background">@color/background</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="displayOptions">showTitle</item>
    </style>

    <!-- Текстовые стили -->
    <style name="EvotorTheme.Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EvotorTheme.Text.Heading1" parent="EvotorTheme.Text">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/heading1_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/heading1_line_spacing_extra</item>
    </style>

    <style name="EvotorTheme.Text.Heading2" parent="EvotorTheme.Text">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/heading2_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/heading2_line_spacing_extra</item>
    </style>

    <style name="EvotorTheme.Text.Heading3" parent="EvotorTheme.Text">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/heading3_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/heading3_line_spacing_extra</item>
    </style>

    <style name="EvotorTheme.Text.Heading4" parent="EvotorTheme.Text">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/heading4_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/heading4_line_spacing_extra</item>
    </style>

    <style name="EvotorTheme.Text.Heading5" parent="EvotorTheme.Text">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/heading5_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/heading5_line_spacing_extra</item>
    </style>

    <style name="EvotorTheme.Text.Body1" parent="EvotorTheme.Text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/body1_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/body1_line_spacing_extra</item>
    </style>

    <style name="EvotorTheme.Text.Body2" parent="EvotorTheme.Text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/body2_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/body2_line_spacing_extra</item>
    </style>

    <style name="EvotorTheme.Text.Body2.Bold" parent="EvotorTheme.Text.Body2">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EvotorTheme.Text.Caption1" parent="EvotorTheme.Text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/caption1_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/caption1_line_spacing_extra</item>
    </style>

    <style name="EvotorTheme.Text.Caption1.Medium" parent="EvotorTheme.Text.Caption1">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="EvotorTheme.Text.Caption2" parent="EvotorTheme.Text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/caption2_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/caption2_line_spacing_extra</item>
    </style>

    <style name="EvotorTheme.Text.Caption2.Medium" parent="EvotorTheme.Text.Caption2">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Стили кнопок -->
    <style name="EvotorTheme.Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingExtra">@dimen/button1_line_spacing_extra</item>
        <item name="android:textSize">@dimen/button1_text_size</item>
        <item name="android:paddingStart">@dimen/button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/button_horizontal_padding</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="EvotorTheme.Button.Big" parent="EvotorTheme.Button">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:lineSpacingExtra">@dimen/button1_line_spacing_extra</item>
        <item name="android:minHeight">@dimen/button_big_min_height</item>
        <item name="android:minWidth">@dimen/button_big_min_width</item>
        <item name="android:textColor">@color/button_text_color_black</item>
        <item name="android:drawablePadding">@dimen/button_big_drawable_padding</item>
    </style>

    <style name="EvotorTheme.Button.Big.Primary" parent="EvotorTheme.Button.Big">
        <item name="android:background">@drawable/btn_big_primary_background</item>
    </style>

    <style name="EvotorTheme.Button.Big.Additional" parent="EvotorTheme.Button.Big">
        <item name="android:background">@drawable/btn_big_additional_background</item>
    </style>

    <style name="EvotorTheme.Button.Regular" parent="EvotorTheme.Button">
        <item name="android:textColor">@color/button_text_color_black</item>
        <item name="android:minHeight">@dimen/button_regular_min_height</item>
    </style>

    <style name="EvotorTheme.Button.Regular.Primary" parent="EvotorTheme.Button.Regular">
        <item name="android:background">@drawable/btn_regular_primary_background</item>
    </style>

    <style name="EvotorTheme.Button.Regular.Additional" parent="EvotorTheme.Button.Regular">
        <item name="android:background">@drawable/btn_regular_additional_background</item>
    </style>

    <style name="EvotorTheme.Button.Regular.Warning" parent="EvotorTheme.Button.Regular">
        <item name="android:background">@drawable/btn_regular_warning_background</item>
        <item name="android:textColor">@color/button_text_color_white</item>
    </style>

    <style name="EvotorTheme.Button.Regular.Text" parent="EvotorTheme.Button.Regular">
        <item name="android:background">@drawable/btn_transparent_background</item>
        <item name="android:textColor">@color/button_text_color_white</item>
    </style>

    <style name="EvotorTheme.Button.Text" parent="EvotorTheme.Button">
        <item name="android:background">@drawable/btn_transparent_background</item>
        <item name="android:minHeight">@dimen/button_regular_min_height</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:paddingStart">@dimen/button_text_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/button_text_horizontal_padding</item>
    </style>

    <style name="EvotorTheme.Button.Text.Main" parent="EvotorTheme.Button.Text">
        <item name="android:paddingTop">@dimen/button_text_main_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/button_text_main_vertical_padding</item>
    </style>

    <style name="EvotorTheme.Button.Text.Small" parent="EvotorTheme.Button.Text">
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">@dimen/button_text_drawable_padding</item>
        <item name="android:paddingTop">@dimen/button_text_small_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/button_text_small_vertical_padding</item>
    </style>

    <!-- Стили для bottom sheet dialog fragment'а -->
    <style name="EvotorTheme.BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/EvotorTheme.BottomSheetModalStyle</item>
    </style>

    <style name="EvotorTheme.BottomSheetModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Стили для progress bar'ов-->
    <style name="EvotorTheme.LinearProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="android:indeterminateTint">@color/accent</item>
        <item name="android:backgroundTint">@color/accent_50</item>
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/accent</item>
    </style>

    <style name="EvotorTheme.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@color/accent</item>
        <item name="android:indeterminate">true</item>
        <item name="indicatorInset">0dp</item>
    </style>

</resources>