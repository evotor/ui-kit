<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EvotorUITheme" parent="Theme.MaterialComponents.Bridge">
        <item name="colorPrimary">@color/background_color</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:actionBarStyle">@style/EvotorUITheme.Toolbar</item>
        <item name="actionBarStyle">@style/EvotorUITheme.Toolbar</item>
    </style>

    <style name="EvotorUITheme.NoActionBar" parent="EvotorUITheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EvotorUITheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/background_color</item>
        <item name="background">@color/background_color</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:displayOptions">showTitle</item>
        <item name="displayOptions">showTitle</item>
    </style>

    <!-- Текстовые стили -->
    <style name="EvotorUITheme.Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="EvotorUITheme.Text.Heading1" parent="EvotorUITheme.Text">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/heading1_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/heading1_line_spacing_extra</item>
    </style>

    <style name="EvotorUITheme.Text.Heading2" parent="EvotorUITheme.Text">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/heading2_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/heading2_line_spacing_extra</item>
    </style>

    <style name="EvotorUITheme.Text.Heading3" parent="EvotorUITheme.Text">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/heading3_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/heading3_line_spacing_extra</item>
    </style>

    <style name="EvotorUITheme.Text.Heading4" parent="EvotorUITheme.Text">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/heading4_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/heading4_line_spacing_extra</item>
    </style>

    <style name="EvotorUITheme.Text.Heading5" parent="EvotorUITheme.Text">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/heading5_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/heading5_line_spacing_extra</item>
    </style>

    <style name="EvotorUITheme.Text.Body1" parent="EvotorUITheme.Text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/body1_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/body1_line_spacing_extra</item>
    </style>

    <style name="EvotorUITheme.Text.Body2" parent="EvotorUITheme.Text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/body2_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/body2_line_spacing_extra</item>
    </style>

    <style name="EvotorUITheme.Text.Body2.Bold" parent="EvotorUITheme.Text.Body2">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EvotorUITheme.Text.Caption1" parent="EvotorUITheme.Text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/caption1_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/caption1_line_spacing_extra</item>
    </style>

    <style name="EvotorUITheme.Text.Caption1.Medium" parent="EvotorUITheme.Text.Caption1">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="EvotorUITheme.Text.Caption2" parent="EvotorUITheme.Text">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/caption2_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/caption2_line_spacing_extra</item>
    </style>

    <style name="EvotorUITheme.Text.Caption2.Medium" parent="EvotorUITheme.Text.Caption2">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Стили кнопок -->
    <style name="EvotorUITheme.Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:lineSpacingExtra">@dimen/button1_line_spacing_extra</item>
        <item name="android:textSize">@dimen/button1_text_size</item>
        <item name="android:paddingStart">@dimen/button_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/button_horizontal_padding</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="EvotorUITheme.Button.Big" parent="EvotorUITheme.Button">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:lineSpacingExtra">@dimen/button1_line_spacing_extra</item>
        <item name="android:minHeight">@dimen/button_big_min_height</item>
        <item name="android:minWidth">@dimen/button_big_min_width</item>
        <item name="android:textColor">@color/button_text_color_black</item>
        <item name="android:drawablePadding">@dimen/button_big_drawable_padding</item>
    </style>

    <style name="EvotorUITheme.Button.Big.Primary" parent="EvotorUITheme.Button.Big">
        <item name="android:background">@drawable/btn_big_primary_background</item>
    </style>

    <style name="EvotorUITheme.Button.Big.Additional" parent="EvotorUITheme.Button.Big">
        <item name="android:background">@drawable/btn_big_additional_background</item>
    </style>

    <style name="EvotorUITheme.Button.Regular" parent="EvotorUITheme.Button">
        <item name="android:textColor">@color/button_text_color_black</item>
        <item name="android:minHeight">@dimen/button_regular_min_height</item>
    </style>

    <style name="EvotorUITheme.Button.Regular.Primary" parent="EvotorUITheme.Button.Regular">
        <item name="android:background">@drawable/btn_regular_primary_background</item>
    </style>

    <style name="EvotorUITheme.Button.Regular.Additional" parent="EvotorUITheme.Button.Regular">
        <item name="android:background">@drawable/btn_regular_additional_background</item>
    </style>

    <style name="EvotorUITheme.Button.Regular.Warning" parent="EvotorUITheme.Button.Regular">
        <item name="android:background">@drawable/btn_regular_warning_background</item>
        <item name="android:textColor">@color/button_text_color_white</item>
    </style>

    <style name="EvotorUITheme.Button.Regular.Text" parent="EvotorUITheme.Button.Regular">
        <item name="android:background">@drawable/btn_transparent_background</item>
        <item name="android:textColor">@color/button_text_color_white</item>
    </style>

    <style name="EvotorUITheme.Button.Text" parent="EvotorUITheme.Button">
        <item name="android:foreground">@drawable/btn_transparent_background</item>
        <item name="android:background">@null</item>
        <item name="android:minHeight">@dimen/button_text_min_height</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:paddingStart">@dimen/button_text_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/button_text_horizontal_padding</item>
    </style>

    <style name="EvotorUITheme.Button.Text.Main" parent="EvotorUITheme.Button.Text">
        <item name="android:paddingTop">@dimen/button_text_main_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/button_text_main_vertical_padding</item>
    </style>

    <style name="EvotorUITheme.Button.Text.Small" parent="EvotorUITheme.Button.Text">
        <item name="android:textAllCaps">false</item>
        <item name="android:drawablePadding">@dimen/button_text_drawable_padding</item>
        <item name="android:paddingTop">@dimen/button_text_small_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/button_text_small_vertical_padding</item>
    </style>

    <!-- Стили для bottom sheet dialog fragment'а -->
    <style name="EvotorUITheme.BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/EvotorUITheme.BottomSheetModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="EvotorUITheme.BottomSheetModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Стили для progress bar'ов-->
    <style name="EvotorUITheme.LinearProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="android:indeterminateTint">@color/accent</item>
        <item name="android:backgroundTint">@color/accent_50</item>
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/accent</item>
    </style>

    <style name="EvotorUITheme.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@color/accent</item>
        <item name="android:indeterminate">true</item>
        <item name="indicatorInset">0dp</item>
    </style>

    <!-- Стили для TextInputLayout -->
    <style name="EvotorUITheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="errorTextColor">@color/error</item>
        <item name="boxBackgroundColor">@color/popover</item>
        <item name="boxStrokeColor">@color/edit_text_underline_color</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="errorIconDrawable">@null</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/text_secondary</item>
    </style>

    <style name="EvotorUITheme.TextInputLayout.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="errorTextColor">@color/error</item>
        <item name="boxBackgroundColor">@color/popover</item>
        <item name="boxStrokeColor">@color/edit_text_underline_color</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="endIconTint">@color/text_secondary</item>
    </style>

    <style name="EvotorUITheme.TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor_drawable</item>
    </style>

    <!-- Стиль для RadioButton -->
    <style name="EvotorUITheme.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textAppearance">@style/EvotorUITheme.Text.Body1</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="android:paddingStart">@dimen/button_text_drawable_padding</item>
    </style>

    <!-- Стиль для Checkbox -->
    <style name="EvotorUITheme.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:paddingTop">@dimen/button_big_drawable_padding</item>
        <item name="android:paddingBottom">@dimen/button_big_drawable_padding</item>
        <item name="android:paddingStart">@dimen/button_big_drawable_padding</item>
        <item name="android:textAppearance">@style/EvotorUITheme.Text.Body1</item>
        <item name="buttonTint">@color/checkbox_color</item>
    </style>

    <!-- Стиль для диалога на весь экран -->
    <style name="EvotorUITheme.Dialog.FullScreen" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <!-- Стили для keypad'а-->
    <style name="EvotorUITheme.Keypad.Button.Main" parent="EvotorUITheme.Text.Heading2">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@color/keypad_dark_color</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="EvotorUITheme.Keypad.Button.Main.Light" parent="EvotorUITheme.Keypad.Button.Main">
        <item name="android:background">@color/keypad_light_color</item>
    </style>

    <style name="EvotorUITheme.Keypad.Button.Additional" parent="EvotorUITheme.Text.Heading4">
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@color/keypad_additional_dark_color</item>
    </style>

    <style name="EvotorUITheme.Keypad.Button.Additional.Light" parent="EvotorUITheme.Keypad.Button.Additional">
        <item name="android:background">@color/keypad_additional_light_color</item>
    </style>

    <style name="EvotorUITheme.Pinpad.Button" parent="EvotorUITheme.Text.Heading2">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

</resources>