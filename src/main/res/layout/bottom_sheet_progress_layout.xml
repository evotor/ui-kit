<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:viewBindingIgnore="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/bottom_sheet_dialog_margin_horizontal"
        android:background="@drawable/dialog_bottom_background_normal"
        android:orientation="vertical"
        android:paddingVertical="@dimen/bottom_sheet_progress_dialog_horizontal_margin"
        tools:ignore="UselessParent">

        <com.google.android.material.progressindicator.CircularProgressIndicator
            style="@style/EvotorUITheme.CircularProgressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:indeterminate="true"
            app:indicatorSize="56dp"
            app:trackThickness="8dp" />

        <TextView
            android:id="@+id/dialog_message"
            style="@style/EvotorUITheme.Text.Body1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/bottom_sheet_dialog_block_horizontal_margin"
            android:layout_marginTop="@dimen/bottom_sheet_progress_dialog_horizontal_margin"
            android:layout_weight="1"
            android:gravity="center"
            tools:text="Dialog message" />

    </LinearLayout>
</RelativeLayout>
