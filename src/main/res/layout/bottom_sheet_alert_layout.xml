<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_content_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="@dimen/default_margin"
    android:paddingBottom="@dimen/bottom_sheet_dialog_block_vertical_margin"
    tools:background="@drawable/dialog_bottom_background_normal"
    tools:ignore="UselessParent">

    <ImageView
        android:id="@+id/dialog_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/bottom_sheet_dialog_block_horizontal_margin"
        android:scaleType="centerCrop"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/dialog_title"
        style="@style/EvotorUITheme.Text.Heading4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/bottom_sheet_dialog_block_horizontal_margin"
        android:layout_marginTop="@dimen/bottom_sheet_dialog_block_vertical_margin"
        android:layout_marginBottom="@dimen/bottom_sheet_dialog_block_vertical_margin"
        android:gravity="start"
        tools:text="Dialog title" />

    <TextView
        android:id="@+id/dialog_message"
        style="@style/EvotorUITheme.Text.Body1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/bottom_sheet_dialog_block_horizontal_margin"
        android:layout_marginTop="@dimen/bottom_sheet_dialog_block_vertical_margin"
        android:layout_marginBottom="@dimen/bottom_sheet_dialog_block_vertical_margin"
        android:layout_weight="1"
        android:gravity="start"
        tools:text="Dialog message" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_sheet_dialog_block_vertical_margin" />

</LinearLayout>
